{
  "name": "@wmakeev/simplex-context",
  "version": "5.1.0",
  "type": "module",
  "description": "Functions and constants for SimplEx expression language",
  "keywords": [
    "expression",
    "language",
    "siplex",
    "filtrex",
    "functions"
  ],
  "exports": "./build/src/index.js",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build/src/"
  ],
  "scripts": {
    "lint": "eslint . --fix",
    "cleanup": "rm -rf build/",
    "compile:dev": "tsc",
    "compile": "tsc --build tsconfig.prod.json",
    "build:dev": "npm run lint && npm run compile:dev",
    "build": "npm run cleanup && npm run lint && npm run compile",
    "test": "npm run build && node --env-file=.env --test \"build/**/*.test.js\" --test-reporter=spec",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "release": "np"
  },
  "engines": {
    "node": ">=18"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "np": {
    "yarn": false
  },
  "author": "Vitaliy V. Makeev",
  "repository": {
    "type": "git",
    "url": "https://github.com/wmakeev/simplex-context"
  },
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^18.19.45",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/typescript-estree": "^6.10.0",
    "@wmakeev/table-transform": "^4.2.0",
    "auto-changelog": "^2.4.0",
    "csv-parse": "^5.5.6",
    "envalid": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint-language-service": "^5.0.5"
  },
  "dependencies": {
    "@wmakeev/filtrex": "^6.1.0",
    "date-fns": "^4.1.0",
    "pupa": "^3.1.0",
    "safe-regex2": "^3.1.0",
    "safe-stable-stringify": "^2.5.0"
  }
}
